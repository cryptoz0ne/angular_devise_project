<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="form-group col-md-5">
        <span style="font-weight:bold;">* First Name</span>
        <%= f.text_field :first_name, :required => true, :autofocus => true, class: 'form-control' %>
      </div>
      <div class="form-group col-md-7">
        <span style="font-weight:bold;">* Last Name</span>
        <%= f.text_field :last_name, :required => true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <span style="font-weight:bold;">* Email</span>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <span style="font-weight:bold;">* Password</span>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <span style="font-weight:bold;">* Password Confirmation</span>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group">
      *<%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
     <%= f.submit 'Sign up', :class => 'button right' %>
  <% end %>
</div>
